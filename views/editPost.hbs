<section class="htc__contact__area ptb--100 bg__white" style="padding-top: 30px;">
    <div class="container">
        <div class="row">
            <div class="contact-form-wrap mt--60">
                <div class="col-xs-12">
                    <form id="contact-form" action="http://localhost:5000/edit/{{post.id}}" method="post">
                        <div class="single-contact-form">
                            <div class="contact-box subject">
                                <input type="text" name="title" placeholder="Title" required value="{{post.title}}"/>
                            </div>
                        </div>
                        <div class="single-contact-form">
                            <div class="contact-box message">
                                <textarea name="content" placeholder="Content">{{post.content}}</textarea>
                            </div>
                        </div>
                        <div class="contact-btn">
                            <button type="submit" class="fv-btn">Send</button>
                        </div>
                    </form>
                    <div class="form-output">
                        <p class="form-messege"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>